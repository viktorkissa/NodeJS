<h1>Cart</h1>

{{#if courses.length}}
<table>
    <thead>
        <tr>
            <th>Name</th>
            <th>Quantity</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {{#each courses}}
        <tr>
            <td>{{title}} {{id}}</td>
            <td>{{count}}</td>
            <td>
                <button class="btn btn-small">Delete</button>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>

<p><strong>Price:</strong><span class="price">{{price}}</span></p>
{{else}}
<p>Cart is empty</p>
{{/if}}