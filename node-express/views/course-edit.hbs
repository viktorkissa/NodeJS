<h1>Edit {{course.title}}</h1>

<form action="/courses/edit" method="POST" class="course-form">
    <div class="input-field col s6">
        <input id="title" type="text" name="title" class="validate" required value="{{course.title}}">
        <label for="title">Course Name</label>
        <span class="helper-text" data-error="Enter the name"></span>
    </div>

    <div class="input-field col s6">
        <input id="price" type="number" name="price" class="validate" required min="1" value="{{course.price}}">
        <label for="price">Price</label>
        <span class="helper-text" data-error="Enter the price"></span>
    </div>

    <div class="input-field col s6">
        <input id="img" type="text" name="img" class="validate" required value="{{course.img}}">
        <label for="img">URL for image</label>
        <span class="helper-text" data-error="Enter the url of image"></span>
    </div>

    <input type="hidden" name="id" value="{{course._id}}">

    <button type="submit" class="btn btn-primary">Edit</button>
</form>

<form action="/courses/remove" method="POST">
<input type="hidden" name="id" value="{{course._id}}">
    <button type="submit" class="btn red">Remove Course</button>
</form>